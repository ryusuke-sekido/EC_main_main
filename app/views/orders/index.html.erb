<h1>注文履歴一覧</h1>
<table border="1">
 <thead>
  <th>注文日</th>
  <th>配送先</th>
  <th>注文商品</th>
  <th>支払い金額</th>
  <th>ステータス</th>
  <th>注文詳細</th>
 </thead>
 <tbody>
<% @orders.each do |order| %>
 <tr>
  <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
  <td>〒<%= order.postal_code %>,<%= order.adress %>,<%= order.name %></td>
  <td><% order.order_details.each do |order_detail| %>
    <%= order_detail.item.name %><br>
    <% end %></td>
  <td><%= order.total_price %>円</td>
  <td><%= order.order_status %></td>
  <td><%= link_to "表示する", order_path(order.id) %></td>
 </tr>
 <% end %>
 </tbody>
</table>