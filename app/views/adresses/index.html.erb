<h1>配送先登録／一覧</h1>
<%= form_with model: @adress, url: '/adresses', method: :post do |f| %>
<h2>配送先登録</h2>
<table>
 <tbody>
  <tr>
   <th>郵便番号(ハイフンなし)</th>
   <td><%=f.text_field :postal_code %></td>
  </tr>

  <tr>
   <th>住所</th>
   <td><%=f.text_area:adress %></td>
  </tr>

  <tr>
   <th>宛名</th>
   <td><%=f.text_field :name %></td>
  </tr>
 </tbody>
</table>
 <%=f.submit '登録' %>
<% end %>

<h3>配送先一覧</h3>
<table border="1">
  <thead>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </thead>

  <tbody>
   <% @adresses.each do |adress| %>
    <tr>
      <td><%= adress.postal_code %></td>
      <td><%= adress.adress %></td>
      <td><%= adress.name %></td>
      <td><%= link_to "編集する", edit_adress_path(adress.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>


