<h1>商品一覧</h1>
  <table border="1">
   <thead>
   <th>商品名</th>
   <th>商品説明</th>
   <th>画像</th>
   <th>価格</th>
  </thead>
  <tbody>
   <% @items.each do |item| %>
   <tr>
   <td><%= item.name %></td>
   <td><%= item.introduction %></td>
   <td><%= link_to item_path(item.id) do %>
   <%= image_tag item.image, size: "100x100" %><% end %></td>
   <td><%= item.price %>円</td>
   </tr>
   <% end %>
  </tbody>
 </table>
