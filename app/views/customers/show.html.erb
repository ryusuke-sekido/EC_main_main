<h1>マイページ</h1>
<li><%= link_to "配送先一覧へ", adresses_path %></li>
<li><%= link_to '注文履歴一覧へ', orders_path %></li>
<li><%= link_to '会員情報編集', edit_customer_path(current_customer) %></li>

<h2>登録情報</h2>
<div class="container">
<table class="table table-bordered">

  <tbody>
    <tr>
      <th width="50">氏名</th>
      <td width="200"><%= current_customer.last_name %> <%= current_customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
    </tr>

    <tr>
      <th>郵便番号</th>
      <td><%= current_customer.postal_code %></td>
    </tr>

    <tr>
      <th>住所</th>
      <td><%= current_customer.address %></td>
    </tr>

    <tr>
      <th>電話番号</th>
      <td><%= current_customer.telephone_number %></td>
    </tr>

    <tr>
      <th>メールアドレス</th>
      <td><%= current_customer.email %></td>
    </tr>

  </tbody>
</table>
</div>

