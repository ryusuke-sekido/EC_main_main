<h1>注文履歴</h1>
<h2>注文情報</h2>
<table border="1">
 <tbody>
  <tr>
   <th>購入者</th>
   <td><%= @order.name %></td>
  </tr>

  <tr>
   <th>注文日</th>
   <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>

  <tr>
   <th>配送先</th>
   <td><%= @order.postal_code %><%= @order.adress %><%= @order.name %></td>
  </tr>

  <tr>
   <th>支払い方法</th>
   <td><%= @order.payment_method %></td>
  </tr>

  <tr>
   <th>注文ステータス</th>
   <td><%= @order.order_status %></td>
  </tr>
 </tbody>
</table>

<h2>注文内容</h2>
<table border="1">
 <thead>
  <th>商品名</th>
  <th>単価（税込）</th>
  <th>数量</th>
  <th>小計</th>
  <th></th>
 </thead>

 <tbody>
  <% @order.order_details.each do |order_detail| %>
  <tr>
   <td><%= order_detail.item.name %></td>
   <td><%= order_detail.item.price %>円</td>
   <td><%= order_detail.amount %>個</td>
   <td><%= order_detail.item.with_tax_price * order_detail.amount %>円</td>
   <td></td>
  </tr>
  <% end %>
 </tbody>
</table>

<table border="1">
 <tbody>
  <tr>
   <th>商品合計</th>
   <td><%= @order.total_price %>円</td>
  </tr>

  <tr>
   <th>配送料</th>
   <td><%= @order.shopping_cost %>円</td>
  </tr>

  <tr>
   <th>ご請求額</th>
   <td><%= @order.total_price + @order.shopping_cost %>円</td>
  </tr>
 </tbody>
</table>
