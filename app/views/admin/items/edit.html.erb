<h1>商品編集</h1>
<%= form_with model:@item, url: admin_item_path(@item.id), method: :patch do |f| %>
<table>
 <tbody>
  <tr>
   <th>商品名</th>
   <td><%=f.text_field :name %></td>
  </tr>

  <tr>
   <th>商品説明文</th>
   <td><%=f.text_area :introduction %></td>
  </tr>

  <tr>
   <th>画像</th>
   <td><%=f.file_field :image %></td>
  </tr>

  <tr>
   <th>価格</th>
   <td><%=f.text_field :price %>円</td>
  </tr>

  <tr>
   <th>ジャンル</th>
   <td><%= f.select :shop_id, options_from_collection_for_select(Shop.all,   :id, :name) %></h4></td>
  </tr>
 </tbody>
</table>

 <%=f.submit '更新' %>
<% end %>

<%= link_to '商品一覧', admin_items_path %>
