 <h1>商品詳細</h1>
 <table border="1">
 <tbody>
  <tr>
   <th>商品名</th>
   <td><%= @item.name %></td>
  </tr>

  <tr>
   <th>商品説明文</th>
   <td><%= @item.introduction %></td>
  </tr>

  <tr>
   <th>画像</th>
   <td><%= image_tag @item.image, size: "300x300" %></td>
  </tr>

  <tr>
   <th>価格</th>
   <td><%= @item.price %>円</td>
  </tr>

  <tr>
   <th>ジャンル</th>
   <td><%= @item.shop.name %></td>
  </tr>
 </tbody>
</table>

 <p><%= link_to '編集', edit_admin_item_path(@item.id) %></p>
 <p><%= link_to '商品一覧', admin_items_path %></p>